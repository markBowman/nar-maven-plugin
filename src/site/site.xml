<project name="nar-maven-plugin">
    <skin>
        <groupId>org.apache.maven.skins</groupId>
        <artifactId>maven-fluido-skin</artifactId>
        <version>1.3.1</version>
    </skin>

    <style>
    #forkongithub a {
        background:#eee;
        color:#232;
        font-family:arial,sans-serif;
        text-align:center;
        font-weight:bold;
        padding:5px 40px;
        font-size:1rem;
        line-height:2rem;
        position:relative;
        transition:0.5s;
    }
    #forkongithub a:hover {
        background:#9ba;
        color:#222;
    }
    #forkongithub a::before,
    #forkongithub a::after {
        content:"";
        width:100%;
        display:block;
        position:absolute;
        top:1px;
        left:0;
        height:1px;
        background:#888;
    }
    #forkongithub a::after {
        bottom:1px;
        top:auto;
    }
    @media screen and (min-width:600px) {
        #forkongithub {
            position:absolute;
            display:block;
            top:0;
            left:0;
            width:200px;
            overflow:hidden;
            height:200px;
            z-index:9999;
        }
        #forkongithub a {
            width:200px;
            position:absolute;
            top:60px;
            left:-60px;
            transform:rotate(-45deg),scale(0.8,1);
            -webkit-transform:rotate(-45deg),scale(0.8,1);
            -ms-transform:rotate(-45deg),scale(0.8,1);
            -moz-transform:rotate(-45deg),scale(0.8,1);
            -o-transform:rotate(-45deg),scale(0.8,1);
            box-shadow:4px 4px 10px rgba(0,0,0,0.8);
            background:-webkit-linear-gradient(top, #fff, #aaa, #fff);
            background:-moz-linear-gradient(top, #fff, #aaa, #fff);
            background:-ms-linear-gradient(top, #fff, #aaa, #fff);
            background:-o-linear-gradient(top, #fff, #aaa, #fff);
            text-shadow: 0 0 5px rgba(0,0,0,0.5);
        }
    }
    </style>

    <bannerLeft>
        <name>NAR Plugin</name>
        <span id="forkongithub"><a href="https://github.com/maven-nar/nar-maven-plugin/">Fork me on GitHub</a></span>
        <href>http://maven-nar.github.com/nar-maven-plugin/</href>
    </bannerLeft>

  <body>
    <links>
        <item name="NAR Plugin for Maven" href="http://maven-nar.github.io/nar-maven-plugin"/>
        <item name="Maven" href="http://maven.apache.org/"/>
